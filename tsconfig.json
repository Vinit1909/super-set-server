{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*",
        "types/*"
      ] // Adjusted if types are not in src
    }
  },
  "include": [
    "**/*"
  ], // Includes all files
}